{
  "name": "promise-portal",
  "version": "1.1.0",
  "description": "use component like a promisd-like function",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup-node src/index.ts --dts --format esm,cjs --no-splitting --clean",
    "dev": "npm run build -- --watch"
  },
  "peerDependencies": {
    "vue": "^3.2.13"
  },
  "devDependencies": {
    "tsup": "^6.2.3",
    "typescript": "^4.8.2",
    "vue": "^3.3.8"
  },
  "author": {
    "name": "tjyuanpeng",
    "email": "tjyuanpeng@gmail.com"
  },
  "homepage": "https://github.com/tjyuanpeng/promise-portal",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjyuanpeng/promise-portal.git"
  },
  "bugs": {
    "url": "https://github.com/tjyuanpeng/promise-portal/issues"
  },
  "license": "MIT",
  "keywords": [
    "vue",
    "promise",
    "portal"
  ]
}